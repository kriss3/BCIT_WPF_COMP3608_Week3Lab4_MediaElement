<Window x:Class="MediaElementProject.MediaElement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="BCIT - Media Element with User Controls" Height="500" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.185,0.016" 
                                 StartPoint="0.189,0.984">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF0C1099" 
                              Offset="0.624"/>
            </LinearGradientBrush>
        </Grid.Background>
        <MediaElement x:Name="MyMediaElement" 
                      LoadedBehavior="Manual"
                      Source="Resources/Running.avi"
                      Height="300"
                      Width="300"
                      Margin="89.6,85.2,79.2,85.2"
                      Grid.Column="0" Grid.Row="0"/>

    </Grid>
</Window>
